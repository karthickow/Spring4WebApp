	<!-- Spring 4 Main configuration file for this Spring web application. -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>			
			/WEB-INF/config/Spring4WebApp-servlet.xml				
		</param-value>			
	</context-param>
	
	<!-- JSF2 Context param Start -->
	<!-- Project Stage Level -->
